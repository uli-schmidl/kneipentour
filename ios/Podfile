platform :ios, '15.0'

# Prevent Cocoapods from accessing Flutter's internals in wrong location
flutter_application_path = File.expand_path('..', File.dirname(__FILE__))
require File.join(flutter_application_path, 'flutter', 'podhelper.rb')

target 'Runner' do
  flutter_ios_podfile_setup
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(flutter_application_path)
end

post_install do |installer|
  flutter_post_install(installer)
end
